{% extends 'base.html.twig' %}
{% block main %}
    {% include 'users/usrsnav.html.twig' %}
    <div id="breadcrumbs">
        <div class="container">
            <h2>Add address</h2>
        </div>
        <!-- / container -->
    </div>
    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8"><br><br>
                {% if errors|length >0 %}
                    {% for error in errors %}
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>{{ error }}</strong>
                        </div>
                    {% endfor %}
                {% endif %}
                <form class="form-horizontal" name="addAddressProcess" method="post">
                    <div class="form-group">
                        <label for="email">Full Name</label>
                        <input type="text" name="address[fullName]"  autocomplete="off" class="form-control capt"/>
                    </div>
                    <div class="form-group">
                        <label for="email">City / town</label>
                        <input type="text" name="address[populated]"    autocomplete="off" class="form-control capt"/>
                    </div>
                    <div class="form-group">
                        <label for="email">Address</label>
                        <input type="text" name="address[address]"   autocomplete="off" class="form-control capt"/>
                    </div>
                    <div class="form-group">
                        <label for="email">Post code</label>
                        <input type="text" name="address[postCode]"  autocomplete="off" class="form-control capt"/>
                    </div>
                    <div class="form-group">
                        <label for="email">Phone</label>
                        <input type="text" name="address[phone]"  autocomplete="off" class="form-control capt"/>
                    </div>
                    {{ form_row(form._token) }}
                    <div class="form-group">
                        <button type="submit" class="btn-grey">Add address</button>
                        <a href="{{ path('address') }}" class="btn btn-primary btn-sm">Back</a>
                    </div>
                </form>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}
{% block main %}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="0"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset('images/111.png') }}" alt="Third slide">
            </div>
            <div class="carousel-item ">
                <img class="d-block w-100" src="{{ asset('images/0.jpg') }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('images/01.jpg') }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('images/02.jpg') }}" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div id="body">
        <div class="container">
            <div class="">
                <h2>Last added products</h2>
                    <div class="container">
                        <div class="row">
                            {% if products|length > 0 %}
                                {% for product in products.allProducts %}

                                <div class="col-4">
                                    <div class="last-products padding">
                                        <form>
                                        {% if product.validateDate(product.discountStart,product.discountEnd,product.discount) %}
                                            <span class="timeDisc"><span class="timer_{{ product.id }} "></span>
                                         <script>
                                    var countDownDate_{{ product.id }} = new Date("{{ product.formatDate(product.discountEnd) }}").getTime();
                                    var timeClear_{{ product.id }} = setInterval(function() {
                                        var now_{{ product.id }} = new Date().getTime();
                                        var timeLeft_{{ product.id }} = countDownDate_{{ product.id }} - now_{{ product.id }};
                                        var days_{{ product.id }} = Math.floor(timeLeft_{{ product.id }} / (1000 * 60 * 60 * 24));
                                        var hours_{{ product.id }} = Math.floor(
                                            (timeLeft_{{ product.id }} % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
                                        );
                                        var minutes_{{ product.id }} = Math.floor((timeLeft_{{ product.id }} % (1000 * 60 * 60)) / (1000 * 60));
                                        var seconds_{{ product.id }} = Math.floor((timeLeft_{{ product.id }} % (1000 * 60)) / 1000);
                                        document.querySelector(".timer_{{ product.id }}").innerHTML = days_{{ product.id }} + "d " + hours_{{ product.id }} + "h " + minutes_{{ product.id }} + "m " + seconds_{{ product.id }} + "s ";
                                        if (timeLeft_{{ product.id }} < 0) {
                                            clearInterval(timeClear_{{ product.id }});
                                            document.querySelector(".timer_{{ product.id }}").innerHTML = "{{ product.title }} Finished";
                                        }
                                    }, 1000);
                                </script></span>
                                        {%endif %}
                                        {% if product.discount >0 %}
                                            <span class="pecents">  - {{ product.discount}} %</span>
                                        {% endif %}
                                        {% set img = product.image|split(',') %}
                                        <div class="blk">
                                            <img src="{{ asset('uploads/products_image/'~img.1)}}" alt="" class="img-thumbnail">
                                        </div>
                                        <h3>{{ product.title }}</h3>
                                        {% if product.discount !=0 %}
                                            <div class="oldP">{{ product.oldPrice }} $</div>
                                            <h4> {{ product.price }} $</h4>
                                        {% else %}
                                            <h4> {{ product.price }} $</h4>
                                        {% endif %}
                                        <div class="btnAdd">
                                            <button class="btn-grey">Add to cart</button>
                                        </div>
                                    </form>
                                    </div>
                                    </div>
                            {% endfor %}
                            {% endif %}
                        </div>
                    </div>
            </div>
        </div>
        <!-- / container -->
    </div>
{% endblock %}

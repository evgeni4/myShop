 {% extends 'base.html.twig' %}
{% block main %}
    <div id="breadcrumbs">
        <div class="container">
            <h2>Login</h2>
        </div>
        <!-- / container -->
    </div>
    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8"><br><br>
                {% for msg in app.session.flashBag.get('info') %}
                    <div id="alertMsg" class="alert alert-success" role="alert">
                        <b>{{ msg }}}</b>
                    </div>
                {% endfor %}
                <form name="authenticate" action="{{ path('security_login') }}" method="post">
                    {% if error %}
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
                        </div>
                    {% endif %}
                    <div class="form-group">
                        <label for="email">Email:</label>
                            <input type="text" id="user_email" name="_username" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                            <input type="password" id="password" name="_password" class="form-control"/>

                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="form-group">
                        <button type="submit" class="btn-grey">Login</button>
                        <br>
                    </div>
                </form>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}
{% block main %}
    {% include 'users/usrsnav.html.twig' %}
    <div id="breadcrumbs">
        <div class="container">
            <h2>products</h2>
        </div>
        <!-- / container -->
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12"><br>
                <div class="addBtn">
                    <a href="{{ path('add_product') }}" class="btn btn-primary btn-sm">Add product</a>
                </div>
                {% for msg in app.session.flashBag.get('info') %}
                    <div id="alertMsg" class="alert alert-success" role="alert">
                        <b>{{ msg }}</b>
                    </div>
                {% endfor %}
                <table class="table">
                    <thead class="thead-dark">
                    <tr>
                        <th>ID#</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Metal Type</th>
                        <th>Price</th>
                        <th>Discount</th>
                        <th>Create Author</th>
                        <th>Create Date</th>
                        <th>Edit / Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if products|length > 0 %}
                        {% for product in products.allProducts %}
                            <tr>
                                <td>{{ product.id }}</td>
                                <td>{{ product.title }}</td>
                                <td>{{ product.category.title }}</td>
                                <td>{{ product.metalId.title }}</td>
                                <td>
                                    {% if product.discount is not null %}
                                        <b>
<span>{{ product.price -(product.price*(product.discount /100))}}</span>
                                        </b>
                                        <span style="text-decoration: line-through;color: red">{{ product.price }}</span>
                                    {% else %}
                                        <b>{{ product.price }}</b>
                                    {% endif %}
                                </td>
                                <td>{{ product.discount }}%</td>
                                <td>{{ product.author.fullName}}</td>
                                <td>{{ product.dateAdded|date("m/d/Y H:m:s", "Europe/Sofia") }}</td>
                                <td>
                                    {% if user.authorProduct(product) or user.isAdmin %}
                                    <a href="{{ path('edit_product',{'id':product.id}) }}" class="btn btn-info btn-sm">
                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit
                                    </a>&nbsp;&nbsp;<a href="{{ path('delete_product',{'id':product.id}) }}" class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash" aria-hidden="true"></i> Delete
                                    </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <div class="alert alert-danger alert-dismissible text-align">
                            <strong>You have no products added!</strong>
                        </div>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}